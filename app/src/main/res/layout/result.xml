<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:ems="10"
        android:inputType="none"
        android:text="CPU Usage"
        android:padding="20dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CPUusageTextView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="36sp"
        />



    <EditText
        android:id="@+id/ResultsTitle"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:padding="20dp"
        android:ems="10"
        android:inputType="none"
        android:text="Mem Usage"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/MemUsageTextView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="8dp"
        android:textSize="36sp"
         />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:clickable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Disk Space"
        android:textAlignment="center"
        android:textStyle="bold"
         />
    <com.eyalbira.loadingdots.LoadingDots
        android:id="@+id/Scan_View_text_dot_loader"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="4dp"
        android:accessibilityLiveRegion="assertive"
        android:duplicateParentState="true"
        app:LoadingDots_dots_color="@android:color/holo_green_light"
        app:LoadingDots_dots_count="4"
        app:LoadingDots_dots_size="9dp"
        app:LoadingDots_dots_space="5dp"
        app:LoadingDots_jump_duration="900"
        app:LoadingDots_loop_duration="1200"
        app:LoadingDots_loop_start_delay="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MemUsageTextView" />
    <TextView
        android:id="@+id/DiskSpaceTextView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="36sp"
         />
    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Logged In Users"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/LoggedInUsersTextView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:paddingBottom="8dp"
        android:textSize="36sp"
         />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="44dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:clickable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Historical Values"
        android:textAlignment="center"
        android:textStyle="bold"
         />
    <TextView
        android:id="@+id/AwsResultTextView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="4dp"
        android:overScrollMode="always"
        android:paddingBottom="8dp"
        android:text="wgoiwgruoewgruoewvfweuivfewuogfowuevfuewivfuweigruwegrweurgewrguoewrgweuvfeuiwfvweuirvgewugroeroewufvivfewfiwevkfuewivcehskvsyvhskfiewvscy"
        android:textSize="12sp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResultsTitle"
        app:layout_constraintVertical_bias="0.059" />



</LinearLayout>






</ScrollView>